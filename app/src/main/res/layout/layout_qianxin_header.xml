<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="14dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_look"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@color/color1"
            android:text="测试结果校验"
            android:textColor="#fff"
            android:textSize="12sp" />

        <Space
            android:layout_width="10dp"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/bt_upload_img"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@color/color1"
            android:text="上传实地照片"
            android:textColor="#fff"
            android:textSize="12sp" />

        <Space
            android:layout_width="10dp"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/bt_look_img"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@color/color1"
            android:text="查看图片"
            android:textColor="#fff"
            android:textSize="12sp" />


    </LinearLayout>


    <TextView
        android:id="@+id/tv_guanglan_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        tools:text="所属光缆:" />


    <TextView
        android:id="@+id/tv_guangland_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="光缆段名称:" />

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="定位位置:" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/head_cslick"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="参数配置"
            android:textColor="#000"
            android:textSize="16sp" />

        <com.dl7.tag.TagLayout
            android:id="@+id/sel_mode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:tag_layout_mode="single_choice" />

        <TextView
            android:id="@+id/head_click"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="展开"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorDivider" />

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2eded"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="测试距离" />

        <com.dl7.tag.TagLayout
            android:id="@+id/juli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tag_layout_mode="single_choice"
            app:tag_layout_shape="round_rect" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="测试波长" />

        <com.dl7.tag.TagLayout
            android:id="@+id/bochang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tag_layout_mode="single_choice"
            app:tag_layout_shape="round_rect" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="测试脉宽" />

        <com.dl7.tag.TagLayout
            android:id="@+id/maikuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tag_layout_mode="single_choice"
            app:tag_layout_shape="round_rect" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="测试时间" />

        <com.dl7.tag.TagLayout
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tag_layout_mode="single_choice"
            app:tag_layout_shape="round_rect" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="测试模式" />

        <com.dl7.tag.TagLayout
            android:id="@+id/mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tag_layout_mode="single_choice"
            app:tag_layout_shape="round_rect" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="折射率" />

        <com.dl7.tag.TagLayout
            android:id="@+id/zheshelv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tag_layout_mode="single_choice"
            app:tag_layout_shape="round_rect" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/content2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/content2_juli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试距离:" />

        <TextView
            android:id="@+id/content2_bochang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试波长:" />


        <TextView
            android:id="@+id/content2_maikuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试脉宽:" />


        <TextView
            android:id="@+id/content2_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试时间:" />


        <TextView
            android:id="@+id/content2_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试模式:" />


        <TextView
            android:id="@+id/content2_zheshelv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="折射率:" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/content3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试距离:" />

        <com.dl7.tag.TagLayout
            android:id="@+id/content3_juli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tag_layout_mode="single_choice"
            app:tag_layout_shape="round_rect" />

    </LinearLayout>


</LinearLayout>