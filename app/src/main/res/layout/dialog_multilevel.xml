<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_bottom_dialog"
    android:orientation="vertical">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="20dp"
        >

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="#050505"
            android:textSize="18dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="所在地区"
            android:textColor="#050505"
            android:textSize="18dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textColor="#050505"
            android:textSize="18dp" />


    </android.support.v7.widget.LinearLayoutCompat>



    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#D8D8D8" />

    <com.zzw.guanglan.dialogs.multilevel.FixPagerSlidingTabStrip
        android:id="@+id/pst_titles"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="16dp"
        android:textStyle="normal"
        app:pstsDividerColor="@android:color/transparent"
        app:pstsIndicatorColor="#ff9453"
        app:pstsIndicatorHeight="2dp"
        app:pstsTabPaddingLeftRight="5dp"
        app:pstsUnderlineColor="#ff9453"
        app:pstsUnderlineHeight="0px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#D8D8D8" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</android.support.v7.widget.LinearLayoutCompat>